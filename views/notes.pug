extends base

append stylesheets
    link(rel="stylesheet" href="/stylesheets/notes.css")

block content
    main
        section
            div
                form
                    input(id="search-note" class="input" type="text" name="search-note" placeholder="Rechercher une note")

            div
                button(id="new-note" class="button-stylised" onclick="document.querySelector('#note-modal').classList.remove('active')") Nouvelle note
                button(id="enable-delete-note" class="button-stylised") Supprimer une note

        section(id="notes")
            for note in notes
                article(class="note")
                    input(type="number" name="note-id" value=note.note_id hidden)
                    div(class="note-title")=note.title
                    div(class="note-text")=note.text
                    <!-- Va également accueillir la classe "delete" -->
                    button(class="open-note") Ouvrir

        article(id="note-modal")
            div(id="note-modal-inner")
                form
                    input(id="note-modal-id" type="number" name="note-modal-id" hidden)
                    input(id="note-modal-title" type="text" name="note-modal-title" placeholder="Titre")
                    textarea(id="note-modal-text" name="text")
                span Dernière sauvegarde :
                span
                    button(id="close-modal-btn" class="button-stylised" onclick="closeNote()") Fermer


block js
    script(src='/js/refresh-notes.js')
    script(src='/js/delete-notes.js')
    script(src='/js/modal.js')
    script(src='/js/search-note.js')