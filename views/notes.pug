extends base

append stylesheets
    link(rel="stylesheet", href="/stylesheets/notes.css")

block content
    main
        section(id="new-note")
            form
                input(type="number", name="note-id" hidden)
                textarea(id="note-text", name="text", placeholder="Créer une nouvelle note")

        section(id="notes")
            <!-- Lors du clic, récupérer les données et créer une nouvelle div qui aura le comportement d'un modal (position: fixed etc) -->
            for note in notes
                article(class="note")
                    div=note.note_id
                    div=note.text

            article(id="note-modal")
                div(id="note-modal-inner")
                        form
                            input(id="note-id", type="number", name="note-id" hidden)
                            textarea(id="note-text" name="text", cols="30", rows="10")
                        span dernière sauvegarde :
                        span
                            button(id="close-modal-btn", class="button-stylised", onclick="document.querySelector('#note-modal').classList.remove('active')") Fermer la note
                        

block js
    script(src='/js/modal.js')